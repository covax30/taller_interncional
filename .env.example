# =============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================

# Nombre de la base de datos
DB_NAME=nombre de la base de datos

# Usuario de la base de datos
DB_USER= nombre de usuario

# Contraseña de la base de datos (¡MANTÉN ESTO SEGURO!)
DB_PASSWORD= Contraseña de la base de datos

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT= pueto de la base de datos

# =============================================
# CONFIGURACIÓN DE DJANGO
# =============================================

# Clave secreta de Django (¡GENERA UNA NUEVA PARA PRODUCCIÓN!)
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui

# Modo de depuración (False en producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,.mi-dominio.com

# =============================================
# CONFIGURACIÓN DE BACKUPS
# =============================================

# Directorio de backups (relativo al proyecto)
BACKUP_DIR=backups/

# Tiempo máximo de ejecución para backups (segundos)
BACKUP_TIMEOUT=300

# Tiempo máximo para restauraciones (segundos)
RESTORE_TIMEOUT=600

# Comprimir backups por defecto
COMPRESS_BACKUPS=True

# =============================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================

# URL de redirección después del login
LOGIN_REDIRECT_URL=/admin/

# URL de redirección después del logout
LOGOUT_REDIRECT_URL=/admin/

# =============================================
# CONFIGURACIÓN DE CORREO (OPCIONAL)
# =============================================

# Email para notificaciones
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña_de_app
DEFAULT_FROM_EMAIL=tu_email@gmail.com